<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <!-- Full Screen -->
    <style name="FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FunctionalButton">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">80sp</item>
        <item name="android:textColor">@color/colorButtonTxt</item>
        <item name="android:background">@drawable/round_button</item>
    </style>

    <style name="NumberButton">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">80sp</item>
        <item name="android:textColor">@color/colorButtonBG</item>
        <item name="android:background">@drawable/number_button</item>
    </style>

    <style name="ResultButton">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">80sp</item>
        <item name="android:textColor">@color/colorButtonBG</item>
        <item name="android:background">@drawable/result_button</item>
    </style>
</resources>
